@model Remita.Plugin.RemitalModels.RemitaResponse
@{
    ViewBag.Title = "ConfrimPayment";
}

<div class="card">
    <div class="card-head style-primary">
        <header>
            <h3>
                Payment Information
            </h3>
        </header>

    </div><!--end .card-head -->
    <div class="card-body">
        <ul style="list-style-type: none">
            <li><i class="md-radio-button-on">&nbsp;</i>RRR: @Model.Rrr</li>
            <li><i class="md-radio-button-on">&nbsp;</i>Order Id: @Model.OrderId</li>
            <li><i class="md-radio-button-on">&nbsp;</i>Status: @Model.Status</li>
            @if (Model.Status.Equals("01"))
            {
                <li class="text-success"><i class="md-radio-button-on">&nbsp;</i>Transaction Message: @Model.Message</li>

            }
            else
            {
                <li class="text-danger"><i class="md-radio-button-on">&nbsp;</i>Transaction Message: @Model.Message</li>

            }


        </ul>
    </div>
</div>


